<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="2dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="1dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- 日志级别标签 -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_log_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/log_type_background"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            tools:text="INFO"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 时间戳 -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/log_view_text_secondary"
            android:textSize="10sp"
            android:fontFamily="monospace"
            tools:text="14:25:36.123"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_log_type"
            app:layout_constraintStart_toEndOf="@id/tv_log_type" />

        <!-- 线程名 -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_thread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/thread_background"
            android:paddingHorizontal="4dp"
            android:paddingVertical="1dp"
            android:textColor="@color/log_view_text_secondary"
            android:textSize="9sp"
            android:fontFamily="monospace"
            tools:text="[main]"
            android:visibility="gone"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_log_type"
            app:layout_constraintStart_toEndOf="@id/tv_time" />

        <!-- TAG -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/tag_background"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:textColor="@color/log_view_text_secondary"
            android:textSize="10sp"
            android:textStyle="bold"
            android:maxWidth="120dp"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="MainActivity"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_log_type"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 日志内容 -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/log_content_background"
            android:padding="8dp"
            android:textColor="@color/log_view_text_primary"
            android:textSize="13sp"
            android:fontFamily="monospace"
            android:lineSpacingExtra="2dp"
            tools:text="这是日志内容示例，可能包含多行文本和格式化信息"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_log_type" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>