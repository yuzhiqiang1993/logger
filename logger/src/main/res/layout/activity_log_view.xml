<?xml version="1.0" encoding="utf-8" ?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/log_view_background"
    tools:context=".view.log_view.LogViewActivity">

    <!-- 顶部综合工具栏 -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/toolbar_card"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 搜索图标 -->
        <ImageView
            android:id="@+id/iv_search_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_search"
            app:tint="@color/log_view_icon_tint" />

        <!-- 搜索框 -->
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:hint="搜索... (0)"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/log_view_text_primary"
            android:textColorHint="@color/log_view_text_hint"
            android:textSize="14sp" />

        <!-- 清除搜索文字 -->
        <ImageView
            android:id="@+id/iv_clear_search"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:src="@drawable/ic_clear"
            android:visibility="gone"
            app:tint="@color/log_view_icon_tint"
            tools:visibility="visible" />

        <View
            android:layout_width="1dp"
            android:layout_height="24dp"
            android:layout_marginHorizontal="4dp"
            android:background="@color/log_view_divider" />

        <!-- 级别筛选 -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/btn_log_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:minWidth="32dp"
            android:paddingHorizontal="4dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_filter"
                app:tint="@color/log_view_icon_tint" />

            <TextView
                android:id="@+id/tv_log_type_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="All"
                android:textColor="@color/log_view_text_secondary"
                android:textSize="10sp"
                android:visibility="gone"
                tools:visibility="visible" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <!-- TAG筛选 -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/btn_tag_filter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:minWidth="32dp"
            android:paddingHorizontal="4dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_filter"
                app:tint="@color/log_view_text_primary" />

            <TextView
                android:id="@+id/tv_tag_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text=""
                android:textColor="@color/log_view_text_secondary"
                android:textSize="10sp"
                android:visibility="gone"
                tools:visibility="visible" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <!-- 清空日志 -->
        <ImageView
            android:id="@+id/btn_clear_log"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:src="@drawable/ic_delete"
            app:tint="@color/log_view_icon_tint" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <!-- 日志列表 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/log_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:clipToPadding="false"
        android:fadeScrollbars="false"
        android:paddingBottom="80dp"
        android:scrollbarThumbVertical="@color/log_view_scrollbar_thumb"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_card" />

</androidx.constraintlayout.widget.ConstraintLayout>
